<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>acmeair-webapp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>CookieFilter</filter-name>
    <filter-class>com.acmeair.web.RESTCookieSessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CookieFilter</filter-name>
    <url-pattern>/rest/api/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>com.acmeair.web.AcmeAirApp</servlet-name>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.acmeair.web.AcmeAirApp</servlet-name>
    <url-pattern>/rest/api/*</url-pattern>
  </servlet-mapping>
  <listener>
    <description>Service Discovery Registration Service</description>
    <listener-class>com.acmeair.util.ServiceRegister</listener-class>
  </listener>
</web-app>
